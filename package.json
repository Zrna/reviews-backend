{
  "author": "Luka Zrnic",
  "name": "reviews-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "start": "nodemon index.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "npm run lint -- --fix",
    "migration:generate": "npx sequelize migration:generate --name",
    "migration:run": "npx sequelize db:migrate",
    "migration:undo": "npx sequelize db:migrate:undo",
    "migrations:rerun": "npx sequelize db:migration"
  },
  "lint-staged": {
    "*.{js}": [
      "eslint --fix"
    ],
    "*.+(json|md)": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "axios": "^1.13.2",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.15.3",
    "sequelize": "^6.37.7",
    "sequelize-cli": "^6.6.3"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^5.1.3",
    "lint-staged": "^10.5.4",
    "nodemon": "^3.1.11",
    "prettier": "^3.6.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  }
}
